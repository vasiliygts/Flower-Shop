<Window x:Class="FlowerShopApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Flower Shop" Height="550" Width="800"
        Loaded="Window_Loaded">
    <DockPanel LastChildFill="True">
        <!-- Статус внизу -->
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock Name="DbStatusText" Text="Стан підключення до БД: невідомо" />
            </StatusBarItem>
        </StatusBar>
        <!-- Головна частина вікна -->
        <Grid Margin="20">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">

                <TextBlock Text="Flower Shop"
                       FontSize="24"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

                <Button Content="🛒 Замовлення"
                    Click="OrdersButton_Click"
                    Height="40"
                    Margin="0,5"/>

                <Button Content="📦 Товари"
                    Click="ProductsButton_Click"
                    Height="40"
                    Margin="0,5"/>

                <Button Content="👥 Клієнти"
                    Click="CustomersButton_Click"
                    Height="40"
                    Margin="0,5"/>

                <Button Content="🏢 Постачальники" Click="SuppliersButton_Click" Height="40" Margin="0,5"/>

                <Button Content="🚚 Закупки"
                    Click="SuppliesButton_Click"
                    Height="40"
                    Margin="0,5"/>

                <Button Content="📊 Звіти"
                    Click="ReportsButton_Click"
                    Height="40"
                    Margin="0,5"/>

                <Button Content="❌ Вихід"
                    Click="ExitButton_Click"
                    Height="40"
                    Margin="0,5"
                    Background="LightCoral"/>

            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
