<Window x:Class="FlowerShopApp.Forms.ProductsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Товари" Height="500" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Кнопка додавання -->
        <Button Content="➕ Додати товар"
                Click="AddProductButton_Click"
                Height="30" Width="150"
                HorizontalAlignment="Left"
                Margin="0,0,0,10"/>
        <!-- Кнопка редагування -->
        <Button Content="✏️ Редагувати" Click="EditProductButton_Click" Height="30" Width="150" HorizontalAlignment="Left" Margin="160,0,0,10"/>
        
        <!-- Кнопка видалення -->
        <Button Content="🗑 Видалити"
        Click="DeleteProductButton_Click"
        Height="30" Width="150"
        HorizontalAlignment="Left"
        Margin="320,0,0,10"/>

        <!-- Таблиця товарів -->
        <DataGrid Name="ProductsDataGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="True"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  SelectionMode="Single"/>
    </Grid>
</Window>
