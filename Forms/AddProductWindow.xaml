<Window x:Class="FlowerShopApp.Forms.AddProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Додати товар" Height="400" Width="400" WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Margin="0,0,0,10">
            <TextBlock Text="Назва:"/>
            <TextBox Name="NameTextBox"/>

            <TextBlock Text="Тип:" Margin="0,10,0,0"/>
            <TextBox Name="TypeTextBox"/>

            <TextBlock Text="Ціна:" Margin="0,10,0,0"/>
            <TextBox Name="PriceTextBox"/>

            <TextBlock Text="Опис:" Margin="0,10,0,0"/>
            <TextBox Name="DescriptionTextBox" AcceptsReturn="True" Height="60"/>

            <TextBlock Text="Термін придатності:" Margin="0,10,0,0"/>
            <DatePicker Name="ExpiryDatePicker"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Зберегти" Width="100" Margin="0,10,10,0" Click="SaveButton_Click"/>
            <Button Content="Скасувати" Width="100" Margin="0,10,0,0" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
