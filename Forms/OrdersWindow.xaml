<Window x:Class="FlowerShopApp.Forms.OrdersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Замовлення" Height="600" Width="900">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Кнопки -->
            <RowDefinition Height="2*"/>
            <!-- Таблиця замовлень -->
            <RowDefinition Height="*"/>
            <!-- Деталі замовлення -->
        </Grid.RowDefinitions>

        <!-- 🔘 Панель кнопок -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <Button Content="➕ Додати" Width="100" Margin="0,0,10,0" Click="AddButton_Click"/>
            <Button Content="✏️ Редагувати" Width="100" Margin="0,0,10,0" Click="EditButton_Click"/>
            <Button Content="🗑 Видалити" Width="100" Click="DeleteButton_Click"/>
        </StackPanel>

        <!-- 📋 Таблиця замовлень -->
        <DataGrid x:Name="OrdersDataGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="True"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  SelectionMode="Single"
                  SelectionChanged="OrdersDataGrid_SelectionChanged"/>

        <!-- 📦 Деталі замовлення + сума -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Таблиця товарів у замовленні -->
            <DataGrid Name="OrderDetailsDataGrid"
                      AutoGenerateColumns="True"
                      IsReadOnly="True"
                      CanUserAddRows="False"/>

            <!-- Підсумок -->
            <StackPanel Grid.Row="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,5,0,0">
                <TextBlock Text="Загальна сума: " FontWeight="Bold" VerticalAlignment="Center"/>
                <TextBlock Name="TotalAmountText" FontWeight="Bold" Foreground="DarkBlue" Margin="5,0,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
