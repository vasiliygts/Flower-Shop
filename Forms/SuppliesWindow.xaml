<Window x:Class="FlowerShopApp.Forms.SuppliesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Закупки" Height="600" Width="900">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- кнопки -->
            <RowDefinition Height="2*"/>
            <!-- таблиця закупок -->
            <RowDefinition Height="*"/>
            <!-- таблиця деталей + сума -->
        </Grid.RowDefinitions>

        <!-- 🔘 Панель кнопок -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="➕ Додати" Width="100" Margin="0,0,10,0" Click="AddSupply_Click"/>
            <Button Content="✏️ Редагувати" Width="100" Margin="0,0,10,0" Click="EditSupply_Click"/>
            <Button Content="🗑 Видалити" Width="100" Click="DeleteSupply_Click"/>
        </StackPanel>

        <!-- 📦 Таблиця закупок -->
        <DataGrid Name="SuppliesDataGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="True"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  SelectionMode="Single"
                  SelectionChanged="SuppliesDataGrid_SelectionChanged"/>

        <!-- 📋 Деталі закупки + Сума -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 🔹 Додано заголовок -->
            <TextBlock Text="Товари у вибраній поставці:" 
                       FontWeight="Bold" 
                       FontSize="14" 
                       Margin="0,0,0,5"/>

            <!-- Деталі закупки -->
            <DataGrid Name="SupplyDetailsDataGrid"
                      Grid.Row="1"
                      AutoGenerateColumns="True"
                      IsReadOnly="True"
                      CanUserAddRows="False"/>

            <!-- Сума загальна -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,5,0,0">
                <TextBlock Text="Загальна сума: " FontWeight="Bold" VerticalAlignment="Center"/>
                <TextBlock Name="TotalAmountText" FontWeight="Bold" Foreground="DarkGreen" Margin="5,0,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
