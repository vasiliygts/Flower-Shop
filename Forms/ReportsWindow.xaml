<Window x:Class="FlowerShopApp.Forms.ReportsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Звіти" Height="600" Width="900">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 🔘 Кнопки звітів -->
            <RowDefinition Height="Auto"/>
            <!-- 🔍 Фільтр -->
            <RowDefinition Height="*"/>
            <!-- 📊 Таблиця -->
            <RowDefinition Height="Auto"/>
            <!-- 💰 Підсумок -->
        </Grid.RowDefinitions>

        <!-- 🔘 Панель кнопок звітів -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <!--<Button Content="Продажі за період" Width="160" Margin="0,0,10,0" Click="SalesReport_Click"/>-->
            <Button Content="Популярні товари" Width="140" Margin="0,0,10,0" Click="btnPopular_Click"/>
            <Button Content="Активні клієнти" Width="140" Margin="0,0,10,0" Click="btnCustomers_Click"/>
            <!--<Button Content="Звіт по поставках" Width="140" Margin="0,0,10,0" Click="btnInventory_Click"/>-->
            <!--<Button Content="Залишки на складі" Width="140" Click="btnInventory_Click"/>-->
        </StackPanel>

        <!-- 🔍 Панель фільтрації -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Від:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <DatePicker Name="FromDatePicker" Width="120" Margin="0,0,10,0"/>
            <TextBlock Text="До:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <DatePicker Name="ToDatePicker" Width="120" Margin="0,0,10,0"/>
            <Button Content="🔍 Згенерувати звіт (за період)" Click="GenerateReport_Click"/>
        </StackPanel>

        <!-- 📊 Таблиця звіту -->
        <DataGrid x:Name="ReportDataGrid"
                  Grid.Row="2"
                  AutoGenerateColumns="True"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Клієнт" Binding="{Binding CustomerName}" Width="*"/>
                <DataGridTextColumn Header="Продукт" Binding="{Binding ProductName}" Width="*"/>
                <DataGridTextColumn Header="Продана к-сть" Binding="{Binding Quantity}" Width="100"/>
                <DataGridTextColumn Header="Ціна закупівлі" Binding="{Binding PurchasePrice}" Width="120"/>
                <DataGridTextColumn Header="Ціна продажу" Binding="{Binding SalePrice}" Width="120"/>
                <DataGridTextColumn Header="Прибуток" Binding="{Binding Profit}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- 💰 Підсумковий прибуток -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,10,0">
            <TextBlock Text="Загальний прибуток: " FontWeight="Bold" VerticalAlignment="Center"/>
            <TextBlock x:Name="TotalProfitText" FontWeight="Bold" Foreground="DarkGreen" Margin="5,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
