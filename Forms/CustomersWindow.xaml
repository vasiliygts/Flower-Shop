<Window x:Class="FlowerShopApp.Forms.CustomersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Клієнти" Height="450" Width="700">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель кнопок -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="➕ Додати" Width="100" Margin="0,0,10,0" Click="AddButton_Click"/>
            <Button Content="✏️ Редагувати" Width="100" Margin="0,0,10,0" Click="EditButton_Click"/>
            <Button Content="🗑 Видалити" Width="100" Click="DeleteButton_Click"/>
        </StackPanel>

        <!-- Таблиця клієнтів -->
        <DataGrid Name="CustomersDataGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="True"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  SelectionMode="Single"/>
    </Grid>
</Window>
