<Window x:Class="FlowerShopApp.Forms.EditSupplierWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редагувати постачальника" Height="400" Width="400" WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Назва компанії:"/>
            <TextBox Name="CompanyNameTextBox"/>

            <TextBlock Text="Контактна особа:" Margin="0,10,0,0"/>
            <TextBox Name="ContactPersonTextBox"/>

            <TextBlock Text="Телефон:" Margin="0,10,0,0"/>
            <TextBox Name="PhoneTextBox"/>

            <TextBlock Text="Email:" Margin="0,10,0,0"/>
            <TextBox Name="EmailTextBox"/>

            <TextBlock Text="Адреса:" Margin="0,10,0,0"/>
            <TextBox Name="AddressTextBox"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Зберегти" Width="100" Margin="0,10,10,0" Click="SaveButton_Click"/>
            <Button Content="Скасувати" Width="100" Margin="0,10,0,0" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
